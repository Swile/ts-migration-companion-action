{
  "name": "ts-migration-companion-action",
  "version": "0.0.1",
  "private": true,
  "description": "GitHub Action help you to track your TypeScript Migration coverage",
  "scripts": {
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "lint": "run-p lint:*",
    "lint:eslint": "eslint src/**/*.ts",
    "lint:typecheck": "tsc --noEmit",
    "package": "ncc build src/main.ts --source-map --license licenses.txt",
    "test": "jest",
    "test:watch": "jest --watch",
    "all": "run-s format lint test package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com:Swile/ts-migration-companion-action.git"
  },
  "keywords": [
    "actions",
    "node"
  ],
  "author": "swile",
  "license": "MIT",
  "dependencies": {
    "@actions/core": "1.10.0",
    "@actions/github": "^5.1.1",
    "json2md": "^2.0.0"
  },
  "devDependencies": {
    "@types/jest": "^27.5.2",
    "@types/json2md": "^1.5.1",
    "@types/node": "^18.11.18",
    "@typescript-eslint/parser": "^5.48.0",
    "@vercel/ncc": "0.36.0",
    "eslint": "^8.31.0",
    "eslint-plugin-github": "^4.6.0",
    "eslint-plugin-jest": "^27.2.0",
    "jest": "^27.2.5",
    "js-yaml": "^4.1.0",
    "npm-run-all": "^4.1.5",
    "prettier": "2.8.2",
    "ts-jest": "^27.1.2",
    "typescript": "4.9.4"
  }
}